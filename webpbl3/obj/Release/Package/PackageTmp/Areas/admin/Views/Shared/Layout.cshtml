        const adminbtn = document.querySelector('.js-admin-btn');
        const adminlist = document.querySelector('.js-admin-list');
        const admin_content = document.querySelector('.js-admin-content');

        var admin = document.getElementById('adminbtn').style.display;


        function openadminlist() {
            var adminlist1 = document.getElementById('js-admin-list').style.display;

            if(adminlist1 == 'none'){
                document.getElementById('js-admin-list').style.display = 'block'
            }
            else{
                document.getElementById('js-admin-list').style.display = 'none'

            }

        }

        function closeadminlist () {
            var adminlist1 = document.getElementById('js-admin-list').style.display;

            if(adminlist1 == 'block'){
                document.getElementById('js-admin-list').style.display = 'none'
            }
        }


        adminbtn.addEventListener('click',openadminlist);
        admin_content.addEventListener('click',closeadminlist);

    </script>
