@model DTO.Phong
@{
    ViewBag.Title = "Chỉnh Sửa Phòng";
    Layout = "~/Areas/admin/Views/Shared/Layout.cshtml";

}

<!DOCTYPE html>
<html lang="en">
<head>
    <link href="~/Content/assets-admin/css/styles2.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Content/assets-admin/fonts/themify-icons-font/themify-icons/themify-icons.css">
    <link rel="stylesheet" href="~/Content/assets-admin/fonts/fontello-71dcf3ae/css/fontawesome-codes.css">
    <link rel="stylesheet" href="~/Content/assets-admin/fonts/fontello-71dcf3ae/css/fontawesome-embedded.css">
    <link rel="stylesheet" href="~/Content/assets-admin/fonts/fontello-71dcf3ae/css/fontawesome-ie7-codes.css">
    <link rel="stylesheet" href="~/Content/assets-admin/fonts/fontello-71dcf3ae/css/fontawesome-ie7.css">
    <link rel="stylesheet" href="~/Content/assets-admin/fonts/fontawesome-free-6.0.0-web/css/all.css">
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
</head>
<body>
    <div class="order-container__header">
        <h2>
            CHỈNH SỬA PHÒNG
        </h2>
    </div>

    <div class="order-container__content">

        <form class="form-horizontal" action="/admin/Phong/UpDatePhong" method="post">

            <div class="form-group">
                <label class="margin-right-20 text-right form-group__label" for="">Tên Loại Phòng</label>
                <input disabled placeholder="Phòng Gia Đình" class="form-group__input" type="text" value="@Model.TenLoaiPhong">
            </div>

            <div class="form-group" style="display: none" >
                <label class="margin-right-20 text-right form-group__label" for="">ID Phòng</label>
                <input placeholder="Phòng Gia Đình" class="form-group__input" type="text" name="IDPhong" value="@Model.IDPhong">
            </div>

            <div class="form-group">
                <label class="margin-right-20 text-right form-group__label" for="">Tên Phòng</label>
                <input placeholder="Phòng Gia Đình" class="form-group__input" type="text" name="TenPhong" value="@Model.TenPhong">
            </div>


            @{
                if (Model.TrangThai == "True")
                {
                    <div class="form-group">
                        <label class="margin-right-20 text-right form-group__label" for="">Trạng Thái</label>

                        @Html.DropDownListFor(model => model.TrangThai, new List<SelectListItem> { new SelectListItem { Text = "Đang Ở", Value = "1" }, new SelectListItem { Text = "Trống", Value = "0" } },
                       new { @class = " form-group__input" })

                    </div>
                }
                else
                {
                    <div class="form-group">
                        <label class="margin-right-20 text-right form-group__label" for="">Trạng Thái</label>


                        @Html.DropDownListFor(model => model.TrangThai, new List<SelectListItem> { new SelectListItem { Text = "Trống", Value = "0" }, new SelectListItem { Text = "Đang Ở", Value = "1" } },
                       new { @class = " form-group__input" })

                    </div>
                }


            }


            <div class="form-group">
                <label class="margin-right-20 text-right form-group__label" for=""></label>
                <div class="form-group__input">
                    <button type="submit" class="button--modify padding-8">Xác Nhận</button>
                    <a href="/admin/Phong/DanhSachPhong" class="button--modify padding-8">Quay Lại</a>
                </div>
            </div>
        </form>

    </div>
</body>
</html>

