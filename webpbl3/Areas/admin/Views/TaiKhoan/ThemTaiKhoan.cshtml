
@{
    ViewBag.Title = "Thêm Tài Khoản";
    Layout = "~/Areas/admin/Views/Shared/Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <link href="~/Content/assets-admin/css/styles2.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Content/assets-admin/fonts/themify-icons-font/themify-icons/themify-icons.css">
    <link rel="stylesheet" href="~/Content/assets-admin/fonts/fontello-71dcf3ae/css/fontawesome-codes.css">
    <link rel="stylesheet" href="~/Content/assets-admin/fonts/fontello-71dcf3ae/css/fontawesome-embedded.css">
    <link rel="stylesheet" href="~/Content/assets-admin/fonts/fontello-71dcf3ae/css/fontawesome-ie7-codes.css">
    <link rel="stylesheet" href="~/Content/assets-admin/fonts/fontello-71dcf3ae/css/fontawesome-ie7.css">
    <link rel="stylesheet" href="~/Content/assets-admin/fonts/fontawesome-free-6.0.0-web/css/all.css">
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <div class="order-container__header">
        <h2>
            THÊM MỚI TÀI KHOẢN
        </h2>
    </div>

    <div class="order-container__content">
        <form action="/admin/TaiKhoan/ThemTaiKhoan" method="post" class="form-horizontal">

            <div class="form-group">
                <label class="margin-right-20 text-right form-group__label" for="">Tên Đăng Nhập</label>
                <input required class="form-group__input" type="text" name="TenTaiKhoan" pattern="[A-Za-z0-9]{5,15}" title="Tên đăng nhập phải có tối thiểu 5 ký tự và không có ký tự đặc biệt">
            </div>


            <div class="form-group">
                <label class="margin-right-20 text-right form-group__label" for="">Họ và Tên</label>
                <input required class="form-group__input" type="text" name="HoVaTen">
            </div>

            <div class="form-group">
                <label class="margin-right-20 text-right form-group__label" for="">Giới tính</label>
                <select class=" form-group__input" name="GioiTinh">
                    <option value="1">Nam</option>
                    <option value="0">Nữ</option>
                </select>

            </div>

            <div class="form-group">
                <label class="margin-right-20 text-right form-group__label" for="">Chứng Minh Nhân Dân</label>
                <input required class="form-group__input" type="number" name="CMND">
            </div>

            <div class="form-group">
                <label class="margin-right-20 text-right form-group__label" for="">Số Điện Thoại</label>
                <input required class="form-group__input" type="text" name="SoDT">
            </div>

            <div class="form-group">
                <label class="margin-right-20 text-right form-group__label" for="">Địa Chỉ</label>
                <input required class="form-group__input" type="text" name="DiaChi">
            </div>

            <div class="form-group">
                <label class="margin-right-20 text-right form-group__label" for="">Ngày Sinh</label>
                <input required class="form-group__input" type="date" name="NgaySinh">
            </div>


            <div class="form-group">
                <label class="margin-right-20 text-right form-group__label" for="">Mật Khẩu</label>
                <input id="password" required class="form-group__input" type="password" name="MatKhau">
            </div>


            <div class="form-group">
                <label class="margin-right-20 text-right form-group__label" for="">Xác Nhận Mật Khẩu</label>
                <input id="confirm_password" onkeyup="check()" required class="form-group__input" type="password" name="XacNhanMatKhau">
            </div>

            <div class="form-group">
                <label class="margin-right-20 text-right form-group__label" for=""></label>
                <span id="message" class="form-group__input "></span>
            </div>

            <div class="form-group">
                <label class="margin-right-20 text-right form-group__label" for=""></label>
                <div class="form-group__input">
                    <button id="submit" type="submit" class="button--modify padding-8">Xác Nhận</button>
                    <a href="/admin/TaiKhoan/DanhSachTaiKhoan" class="button--modify padding-8">Quay Lại</a>
                </div>
            </div>
        </form>

    </div>

    <script>
        var check = function() {
            if (document.getElementById('password').value ==
                document.getElementById('confirm_password').value) {
                document.getElementById('message').style.color = 'green';
                document.getElementById('message').innerHTML = 'Mật Khẩu Hợp Lệ';
                document.getElementById('submit').disabled = false;

            } else {
                document.getElementById('message').style.color = 'red';
                document.getElementById('message').innerHTML = 'Mật Khẩu Không Trùng Khớp';
                document.getElementById('submit').disabled = true;

            }
        }
    </script>

</body>
</html>