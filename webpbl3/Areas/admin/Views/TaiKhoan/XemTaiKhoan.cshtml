@model DTO.DSTaiKhoanNVView
@{
    ViewBag.Title = "XemDanhSach";
    Layout = "~/Areas/admin/Views/Shared/Layout.cshtml";

}

<!DOCTYPE html>
<html lang="en">
<head>
    <link href="~/Content/assets-admin/css/styles2.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Content/assets-admin/fonts/themify-icons-font/themify-icons/themify-icons.css">
    <link rel="stylesheet" href="~/Content/assets-admin/fonts/fontello-71dcf3ae/css/fontawesome-codes.css">
    <link rel="stylesheet" href="~/Content/assets-admin/fonts/fontello-71dcf3ae/css/fontawesome-embedded.css">
    <link rel="stylesheet" href="~/Content/assets-admin/fonts/fontello-71dcf3ae/css/fontawesome-ie7-codes.css">
    <link rel="stylesheet" href="~/Content/assets-admin/fonts/fontello-71dcf3ae/css/fontawesome-ie7.css">
    <link rel="stylesheet" href="~/Content/assets-admin/fonts/fontawesome-free-6.0.0-web/css/all.css">
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <div class="order-container__header">
        <h2>
            CHỈNH SỬA TÀI KHOẢN
        </h2>
    </div>

    <div class="order-container__content">
        <form class="form-horizontal" action="/admin/TaiKhoan/UpDate" method="post">

            <div class="form-group" style="display : none">
                <label class="margin-right-20 text-right form-group__label" for="">ID</label>
                <input class="form-group__input" type="text" name="ID" value="@Model.ID">
            </div>

            <div class="form-group">
                <label class="margin-right-20 text-right form-group__label" for="">Tên Đăng Nhập</label>
                <input disabled class="form-group__input" type="text" value="@Model.TenTaiKhoan">
            </div>

            <div class="form-group">
                <label class="margin-right-20 text-right form-group__label" for="">Họ Tên Khách Hàng</label>
                <input class="form-group__input" type="text" name="HoVaTen" value="@Model.HoVaTen">
            </div>

            <div class="form-group">
                <label class="margin-right-20 text-right form-group__label" for="">Giới tính</label>

                @{
                    if (Model.GioiTinh == "True")
                    {
                        @Html.DropDownListFor(model => model.GioiTinh, new List<SelectListItem> { new SelectListItem { Text = "Nam", Value = "1" }, new SelectListItem { Text = "Nữ", Value = "0" } },
                           new { @class = " form-group__input" })
                    }
                    else
                    {
                        @Html.DropDownListFor(model => model.GioiTinh, new List<SelectListItem> { new SelectListItem { Text = "Nữ", Value = "0" }, new SelectListItem { Text = "Nam", Value = "1" } },
                                                   new { @class = " form-group__input" })
                    }
                }


            </div>

            <div class="form-group">
                <label class="margin-right-20 text-right form-group__label" for="">Số chứng minh nhân dân</label>
                <input class="form-group__input" type="text" name="CMND" value="@Model.CMND">
            </div>


            <div class="form-group">
                <label class="margin-right-20 text-right form-group__label" for="">Ngày sinh</label>
                <input disabled class="form-group__input" type="text" value="@Model.NgaySinh.ToString("dd/MM/yyyy")">
            </div>

            <div class="form-group">
                <label class="margin-right-20 text-right form-group__label" for="">Quyền</label>

                @{
                    if (Model.Quyen == "2")
                    {
                        @Html.DropDownListFor(model => model.Quyen, new List<SelectListItem> { new SelectListItem { Text = "Nhân Viên", Value = "2" }, new SelectListItem { Text = "Admin", Value = "1" } },
                                   new { @class = " form-group__input" })
                    }
                    else
                    {
                        @Html.DropDownListFor(model => model.Quyen, new List<SelectListItem> { new SelectListItem { Text = "Admin", Value = "1" }, new SelectListItem { Text = "Nhân Viên", Value = "2" } },
                                   new { @class = " form-group__input" })
                    }
                }

            </div>
            <div class="form-group">
                <label class="margin-right-20 text-right form-group__label" for="">Số điện thoại</label>
                <input class="form-group__input" type="text" name="SDT" value="@Model.SDT">
            </div>

            <div class="form-group">
                <label class="margin-right-20 text-right form-group__label" for="">Ghi chú</label>
                <input class="form-group__input" type="text" name="GhiChu" value="@Model.GhiChu">
            </div>

            <div class="form-group">
                <label class="margin-right-20 text-right form-group__label" for=""></label>
                <div class="form-group__input">
                    <button type="submit" class="button--modify padding-8">Hoàn Thành</button>
                    <a class="button--modify padding-8" href="/admin/Taikhoan/DanhSachTaiKhoan">Quay Lại</a>
                </div>
            </div>
        </form>

    </div>

</body>
</html>

