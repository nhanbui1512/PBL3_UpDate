@model webpbl3.BUS.TaiKhoan_BUS
@{
    ViewBag.Title = "Danhsachtaikhoan";
    Layout = "~/Areas/admin/Views/Shared/Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <link href="~/Content/assets-admin/css/styles2.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Content/assets-admin/fonts/themify-icons-font/themify-icons/themify-icons.css">
    <link rel="stylesheet" href="~/Content/assets-admin/fonts/fontello-71dcf3ae/css/fontawesome-codes.css">
    <link rel="stylesheet" href="~/Content/assets-admin/fonts/fontello-71dcf3ae/css/fontawesome-embedded.css">
    <link rel="stylesheet" href="~/Content/assets-admin/fonts/fontello-71dcf3ae/css/fontawesome-ie7-codes.css">
    <link rel="stylesheet" href="~/Content/assets-admin/fonts/fontello-71dcf3ae/css/fontawesome-ie7.css">
    <link rel="stylesheet" href="~/Content/assets-admin/fonts/fontawesome-free-6.0.0-web/css/all.css">
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <div class="order-container__header">
        <h2>
            DANH SÁCH TÀI KHOẢN NHÂN VIÊN
        </h2>
        <a href="/admin/TaiKhoan/ThemTaiKhoan" class="add-class-btn"><i class="fa-solid fa-plus"></i>Thêm mới</a>
    </div>

    <div class="order-container__content">

        <div class="order-container__content-header">

            <div class="">
                <label for="">
                    Show
                    <select class="padding-5-20" name="" id=""></select>
                    entries
                </label>
            </div>

            <div class="">
                <label for="">
                    Search:
                    <input class="padding-5-20" type="text">
                </label>
            </div>

        </div>

        <div class="col margin-bottop-10">

            <div class="header-order">
                <div class="font-18 text-center header-order__item">Tên Người Dùng</div>
                <div class="font-18 text-center header-order__item">Ngày Sinh</div>
                <div class="font-18 text-center header-order__item">Tên Đăng Nhập</div>
                <div class="font-18 text-center header-order__item">Số Điện Thoại</div>
                <div class="font-18 text-center header-order__item"></div>
            </div>
            <div class="drop-down white-background"></div>

            @{
                foreach (var item in Model.listKH)
                {
                        <div class="text-center content-order">
                            <div class="col">@item.HoTen</div>
                            <div class="col">@item.NgaySinh.Value.Date.ToString("dd/MM/yyyy")</div>
                            @{ foreach (var i in Model.listTk)
                                {
                                    if (item.IDTaiKhoan == i.IDTK)
                                    {
                                        <div class="col">@i.TenTaiKhoan</div>

                                    }
                                }
                            }
                            <div class="col">@item.SDT</div>

                            <div class="row">
                                @Html.ActionLink("Sửa", "XemTaiKhoan", "TaiKhoan", new { @class = "button", data_val = "abc" })
                                @Html.ActionLink("Khôi Phục", "", "TaiKhoan", new { @class = "button", data_val = "abc" })
                                @Html.ActionLink("Xóa", "", "TaiKhoan", new { @class = "button", data_val = "abc" })
                            </div>
                        </div>
                    <div class="drop-down white-background"></div>
                }
            }


            @*<div class="text-center content-order">
            <div class="col">Mai Văn Phố</div>
            <div class="col">15/12/2002</div>
            <div class="col">phomai123</div>
            <div class="col">0913946875</div>

            <div class="row">
                <button class="admin-order-btn">Sửa</button>
                <button class="admin-order-btn">Khôi Phục</button>
                <button class="admin-order-btn">Xóa</button>
            </div>
        </div>
        <div class="drop-down white-background"></div>*@

        </div>

    </div>
</body>
</html>